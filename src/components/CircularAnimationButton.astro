---
const { href = '#' } = Astro.props;
---

<a href={href}><slot name='icon' /> </a>
<style>
  @property --fill {
    syntax: '<percentage>';
    inherits: true;
    initial-value: 0%;
  }

  article {
    color: red;
  }

  a {
    position: relative;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #7a7a7a;
    background-color: #373737;
    padding: 10px;
    transition:
      color 0.5s,
      --fill 1s;
  }
  a:hover {
    color: greenyellow;
    --fill: 100%;
  }
  a::before {
    position: absolute;
    z-index: -1;
    content: '';
    inset: -3px;
    border-radius: inherit;
    background: conic-gradient(
      greenyellow var(--fill),
      transparent var(--fill)
    );
  }
  svg {
    width: 100%;
    height: 100%;
  }
</style>
